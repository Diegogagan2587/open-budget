<p style="color: green"><%= notice %></p>

<h1 class="text-2xl font-bold mb-4">Income Events</h1>

<div class="mb-4 flex justify-between items-center">
  <%= link_to "âž• New Income Event", @budget_period ? new_budget_period_income_event_path(@budget_period) : new_income_event_path,
      class: "px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600" %>
</div>

<% if @budget_period %>
  <p class="mb-4 text-gray-600">Budget Period: <%= @budget_period.name %></p>
<% end %>

<table class="min-w-full bg-white border">
  <thead>
    <tr class="bg-gray-100">
      <th class="px-4 py-2 text-left">Expected Date</th>
      <th class="px-4 py-2 text-left">Description</th>
      <th class="px-4 py-2 text-left">Expected Amount</th>
      <th class="px-4 py-2 text-left">Received Date</th>
      <th class="px-4 py-2 text-left">Received Amount</th>
      <th class="px-4 py-2 text-left">Status</th>
      <th class="px-4 py-2 text-left">Total Planned</th>
      <th class="px-4 py-2 text-left">Remaining</th>
      <th class="px-4 py-2 text-left">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @income_events.each do |income_event| %>
      <tr class="border-t">
        <td class="px-4 py-2"><%= income_event.expected_date %></td>
        <td class="px-4 py-2"><%= income_event.description %></td>
        <td class="px-4 py-2"><%= number_to_currency(income_event.expected_amount) %></td>
        <td class="px-4 py-2"><%= income_event.received_date || "-" %></td>
        <td class="px-4 py-2"><%= income_event.received_amount ? number_to_currency(income_event.received_amount) : "-" %></td>
        <td class="px-4 py-2">
          <span class="px-2 py-1 rounded text-xs <%= 
            case income_event.status
            when 'pending' then 'bg-yellow-100 text-yellow-800'
            when 'received' then 'bg-blue-100 text-blue-800'
            when 'applied' then 'bg-green-100 text-green-800'
            else 'bg-gray-100 text-gray-800'
            end
          %>">
            <%= income_event.status %>
          </span>
        </td>
        <td class="px-4 py-2"><%= number_to_currency(income_event.total_planned) %></td>
        <td class="px-4 py-2"><%= number_to_currency(income_event.remaining_budget) %></td>
        <td class="px-4 py-2">
          <%= link_to "View", income_event, class: "text-blue-500 hover:underline" %>
          <%= link_to "Edit", edit_income_event_path(income_event), class: "text-blue-500 hover:underline ml-2" %>
          <% unless income_event.is_received? %>
            <%= link_to "Mark Received", receive_income_event_path(income_event), class: "text-green-500 hover:underline ml-2" %>
          <% end %>
          <% if income_event.is_received? && !income_event.is_applied? %>
            <%= link_to "Apply All", apply_all_income_event_path(income_event), method: :post, class: "text-purple-500 hover:underline ml-2" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

