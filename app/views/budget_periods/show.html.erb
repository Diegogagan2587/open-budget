<p style="color: green"><%= notice %></p>

<div class="mb-4">
  <%= link_to "â† Back to Budget Periods", budget_periods_path, class: "text-blue-500 hover:underline" %>
</div>

<h1 class="text-2xl font-bold mb-4"><%= @budget_period.name %></h1>

<div class="mb-4 flex space-x-2">
  <%= link_to "Edit", edit_budget_period_path(@budget_period), class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" %>
  <%= link_to "Income Events", budget_period_income_events_path(@budget_period), class: "px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600" %>
  <%= link_to "New Income Event", new_budget_period_income_event_path(@budget_period), class: "px-4 py-2 bg-indigo-500 text-white rounded hover:bg-indigo-600" %>
</div>

<div class="bg-gray-50 p-4 rounded mb-4">
  <div class="grid grid-cols-2 gap-4 mb-4">
    <div>
      <p class="text-sm text-gray-600">Period Type</p>
      <p class="font-semibold"><%= @budget_period.period_type || "-" %></p>
    </div>
    <div>
      <p class="text-sm text-gray-600">Dates</p>
      <p class="font-semibold"><%= @budget_period.start_date %> to <%= @budget_period.end_date %></p>
    </div>
    <div>
      <p class="text-sm text-gray-600">Total Amount (Legacy)</p>
      <p class="font-semibold"><%= @budget_period.total_amount ? number_to_currency(@budget_period.total_amount) : "-" %></p>
    </div>
  </div>

  <div class="mt-4 pt-4 border-t">
    <h3 class="font-semibold mb-2">Summary</h3>
    <div class="grid grid-cols-3 gap-4">
      <div>
        <p class="text-sm text-gray-600">Total Income</p>
        <p class="font-semibold text-lg"><%= number_to_currency(@budget_period.total_income) %></p>
      </div>
      <div>
        <p class="text-sm text-gray-600">Total Planned</p>
        <p class="font-semibold text-lg"><%= number_to_currency(@budget_period.total_planned) %></p>
      </div>
      <div>
        <p class="text-sm text-gray-600">Remaining Budget</p>
        <p class="font-semibold text-lg <%= @budget_period.remaining_budget < 0 ? 'text-red-600' : 'text-green-600' %>">
          <%= number_to_currency(@budget_period.remaining_budget) %>
        </p>
      </div>
    </div>
  </div>
</div>

<h2 class="text-xl font-bold mb-4">Income Events</h2>

<% if @income_events.any? %>
  <table class="min-w-full bg-white border mb-6">
    <thead>
      <tr class="bg-gray-100">
        <th class="px-4 py-2 text-left">Expected Date</th>
        <th class="px-4 py-2 text-left">Description</th>
        <th class="px-4 py-2 text-left">Expected Amount</th>
        <th class="px-4 py-2 text-left">Status</th>
        <th class="px-4 py-2 text-left">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @income_events.each do |income_event| %>
        <tr class="border-t">
          <td class="px-4 py-2"><%= income_event.expected_date %></td>
          <td class="px-4 py-2"><%= income_event.description %></td>
          <td class="px-4 py-2"><%= number_to_currency(income_event.expected_amount) %></td>
          <td class="px-4 py-2">
            <span class="px-2 py-1 rounded text-xs <%= 
              case income_event.status
              when 'pending' then 'bg-yellow-100 text-yellow-800'
              when 'received' then 'bg-blue-100 text-blue-800'
              when 'applied' then 'bg-green-100 text-green-800'
              else 'bg-gray-100 text-gray-800'
              end
            %>">
              <%= income_event.status %>
            </span>
          </td>
          <td class="px-4 py-2">
            <%= link_to "View", income_event, class: "text-blue-500 hover:underline" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="text-gray-500 mb-6">No income events yet. <%= link_to "Add one", new_budget_period_income_event_path(@budget_period), class: "text-blue-500 hover:underline" %></p>
<% end %>

<h2 class="text-xl font-bold mb-4">All Planned Expenses</h2>

<% if @planned_expenses.any? %>
  <table class="min-w-full bg-white border">
    <thead>
      <tr class="bg-gray-100">
        <th class="px-4 py-2 text-left">Income Event</th>
        <th class="px-4 py-2 text-left">Amount</th>
        <th class="px-4 py-2 text-left">Category</th>
        <th class="px-4 py-2 text-left">Description</th>
        <th class="px-4 py-2 text-left">Status</th>
      </tr>
    </thead>
    <tbody>
      <% @planned_expenses.each do |planned_expense| %>
        <tr class="border-t">
          <td class="px-4 py-2">
            <%= link_to planned_expense.income_event.description, planned_expense.income_event, class: "text-blue-500 hover:underline" %>
          </td>
          <td class="px-4 py-2"><%= number_to_currency(planned_expense.amount) %></td>
          <td class="px-4 py-2"><%= planned_expense.category.name %></td>
          <td class="px-4 py-2"><%= planned_expense.description %></td>
          <td class="px-4 py-2">
            <span class="px-2 py-1 rounded text-xs <%= 
              case planned_expense.status
              when 'pending_to_pay', 'saved', 'transfer_to_savings' then 'bg-yellow-100 text-yellow-800'
              when 'transferring' then 'bg-blue-100 text-blue-800'
              when 'paid', 'transferred', 'spent' then 'bg-green-100 text-green-800'
              else 'bg-gray-100 text-gray-800'
              end
            %>">
              <%= planned_expense.status %>
            </span>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="text-gray-500">No planned expenses yet.</p>
<% end %>

