<!-- app/views/expenses/index.html.erb -->
<% content_for :title, "Expenses" %>

<h1 class="text-2xl font-bold mb-4">Gastos</h1>

<!-- Formulario de filtros -->
<%= form_with url: expenses_path, method: :get, local: true, class: "mb-4 flex space-x-2" do |f| %>
  <%= f.date_field :date_from, value: params[:date_from], class: "border p-2" %>
  <%= f.date_field :date_to,   value: params[:date_to],   class: "border p-2" %>
  <%= f.select :category_id, Category.all.pluck(:name, :id), { include_blank: "Todas" },
               class: "border p-2" %>
  <%= f.text_field :q, placeholder: "Descripci√≥n...", value: params[:q],
                   class: "border p-2 flex-grow" %>
  <%= f.submit "Filtrar", class: "px-4 py-2 bg-blue-500 text-white rounded" %>
<% end %>


<div class="mb-4 flex justify-between items-center">
  <%= link_to "‚ûï Nuevo gasto", new_expense_path,
      class: "px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600" %>
  <!-- Aqu√≠ podr√≠as a√±adir un campo de b√∫squeda o filtro -->
</div>

<table class="min-w-full bg-white border">
  <thead>
    <tr class="bg-gray-100">
      <th class="px-4 py-2 text-left">Fecha</th>
      <th class="px-4 py-2 text-left">Categor√≠a</th>
      <th class="px-4 py-2 text-left">Descripci√≥n</th>
      <th class="px-4 py-2 text-right">Monto</th>
      <th class="px-4 py-2 text-center">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @expenses.order(date: :desc).each do |expense| %>
      <tr class="border-t">
        <td class="px-4 py-2"><%= expense.date.strftime("%d %b %Y") %></td>
        <td class="px-4 py-2"><%= expense.category.name %></td>
        <td class="px-4 py-2"><%= expense.description %></td>
        <td class="px-4 py-2 text-right"><%= number_to_currency(expense.amount) %></td>
        <td class="px-4 py-2 text-center space-x-2">
          <%= link_to "‚úèÔ∏è", edit_expense_path(expense), class: "hover:text-blue-600" %>
          <%= link_to "üóëÔ∏è", expense, method: :delete,
              data: { confirm: "¬øEliminar este gasto?" },
              class: "hover:text-red-600" %>
        </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr class="bg-gray-50 font-semibold">
      <td colspan="3" class="px-4 py-2 text-right">Total:</td>
      <td class="px-4 py-2 text-right">
        <%= number_to_currency(@expenses.sum(:amount)) %>
      </td>
      <td></td>
    </tr>
  </tfoot>
</table>