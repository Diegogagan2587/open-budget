<%= form_with model: [@budget_period, @expense].compact, local: true do |form| %>
  <% if @expense.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-4">
      <h2 class="font-bold"><%= pluralize(@expense.errors.count, "error") %> prohibited this expense from being saved:</h2>
      <ul class="list-disc list-inside">
        <% @expense.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if @budget_period %>
    <%= form.hidden_field :budget_period_id, value: @budget_period.id %>
    <div class="mb-4 p-3 bg-blue-50 border border-blue-200 rounded">
      <p class="text-sm text-gray-700">
        <strong>Periodo presupuestario:</strong> <%= @budget_period.name %>
      </p>
    </div>
  <% else %>
    <div class="mb-4">
      <%= form.label :budget_period_id, "Periodo presupuestario", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.collection_select :budget_period_id, BudgetPeriod.all, :id, :name, { include_blank: "Seleccionar..." }, { class: "border rounded px-3 py-2 w-full" } %>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :date, "Fecha", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.date_field :date, class: "border rounded px-3 py-2 w-full" %>
  </div>

  <div class="mb-4">
    <%= form.label :category_id, "Categoría", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.collection_select :category_id, Category.all, :id, :name, { prompt: "Seleccionar categoría" }, { class: "border rounded px-3 py-2 w-full" } %>
  </div>

  <div class="mb-4">
    <%= form.label :description, "Descripción", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :description, class: "border rounded px-3 py-2 w-full" %>
  </div>

  <div class="mb-4">
    <%= form.label :amount, "Monto", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.number_field :amount, step: 0.01, class: "border rounded px-3 py-2 w-full" %>
  </div>

  <div class="mb-4">
    <%= form.submit "Guardar", class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" %>
    <%= link_to "Cancelar", @budget_period ? @budget_period : expenses_path, class: "px-4 py-2 bg-gray-300 text-gray-700 rounded hover:bg-gray-400 ml-2" %>
  </div>
<% end %>

