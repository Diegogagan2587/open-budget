<p style="color: green"><%= notice %></p>

<div class="mb-4">
  <%= link_to "â† Back to Expense Templates", expense_templates_path, class: "text-blue-500 hover:underline" %>
</div>

<h1 class="text-2xl font-bold mb-4"><%= @expense_template.name %></h1>

<div class="bg-gray-50 p-4 rounded mb-4">
  <div class="grid grid-cols-2 gap-4 mb-4">
    <div>
      <p class="text-sm text-gray-600">Category</p>
      <p class="font-semibold"><%= @expense_template.category.name %></p>
    </div>
    <div>
      <p class="text-sm text-gray-600">Total Amount</p>
      <p class="font-semibold"><%= number_to_currency(@expense_template.total_amount) %></p>
    </div>
    <div>
      <p class="text-sm text-gray-600">Frequency</p>
      <p class="font-semibold"><%= @expense_template.frequency %></p>
    </div>
    <div>
      <p class="text-sm text-gray-600">Status</p>
      <% if @expense_template.is_complete? %>
        <span class="px-2 py-1 rounded text-xs bg-green-100 text-green-800">Complete</span>
      <% else %>
        <span class="px-2 py-1 rounded text-xs bg-yellow-100 text-yellow-800">In Progress</span>
      <% end %>
    </div>
  </div>

  <% if @expense_template.description.present? %>
    <div class="mb-4">
      <p class="text-sm text-gray-600">Description</p>
      <p class="font-semibold"><%= @expense_template.description %></p>
    </div>
  <% end %>

  <% if @expense_template.notes.present? %>
    <div class="mb-4">
      <p class="text-sm text-gray-600">Notes</p>
      <p class="font-semibold"><%= @expense_template.notes %></p>
    </div>
  <% end %>

  <div class="mt-4 pt-4 border-t">
    <h3 class="font-semibold mb-2">Progress</h3>
    <div class="w-full bg-gray-200 rounded-full h-4 mb-2">
      <div class="bg-blue-600 h-4 rounded-full" style="width: <%= [@expense_template.progress_percentage, 100].min %>%"></div>
    </div>
    <div class="grid grid-cols-3 gap-4">
      <div>
        <p class="text-sm text-gray-600">Total Saved</p>
        <p class="font-semibold"><%= number_to_currency(@expense_template.total_saved) %></p>
      </div>
      <div>
        <p class="text-sm text-gray-600">Remaining</p>
        <p class="font-semibold"><%= number_to_currency(@expense_template.remaining_amount) %></p>
      </div>
      <div>
        <p class="text-sm text-gray-600">Percentage</p>
        <p class="font-semibold"><%= @expense_template.progress_percentage.round(1) %>%</p>
      </div>
    </div>
  </div>
</div>

<div class="mb-4 flex space-x-2">
  <%= link_to "Edit", edit_expense_template_path(@expense_template), class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" %>
</div>

<h2 class="text-xl font-bold mb-4">Planned Expenses Linked to This Template</h2>

<% if @planned_expenses.any? %>
  <table class="min-w-full bg-white border">
    <thead>
      <tr class="bg-gray-100">
        <th class="px-4 py-2 text-left">Date</th>
        <th class="px-4 py-2 text-left">Income Event</th>
        <th class="px-4 py-2 text-left">Amount</th>
        <th class="px-4 py-2 text-left">Status</th>
      </tr>
    </thead>
    <tbody>
      <% @planned_expenses.each do |planned_expense| %>
        <tr class="border-t">
          <td class="px-4 py-2"><%= planned_expense.created_at.to_date %></td>
          <td class="px-4 py-2">
            <%= link_to planned_expense.income_event.description, planned_expense.income_event, class: "text-blue-500 hover:underline" %>
          </td>
          <td class="px-4 py-2"><%= number_to_currency(planned_expense.amount) %></td>
          <td class="px-4 py-2">
            <span class="px-2 py-1 rounded text-xs <%= 
              case planned_expense.status
              when 'pending_to_pay', 'saved', 'transfer_to_savings' then 'bg-yellow-100 text-yellow-800'
              when 'transferring' then 'bg-blue-100 text-blue-800'
              when 'paid', 'transferred', 'spent' then 'bg-green-100 text-green-800'
              else 'bg-gray-100 text-gray-800'
              end
            %>">
              <%= planned_expense.status %>
            </span>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="text-gray-500">No planned expenses linked to this template yet.</p>
<% end %>

