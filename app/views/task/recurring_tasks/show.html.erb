<%= turbo_frame_tag "task_detail_panel" do %>
  <div class="fixed inset-y-0 right-0 w-full max-w-md bg-white shadow-xl z-50 overflow-y-auto border-l border-gray-200 animate-slide-in-right">
    <div class="p-6">
      <div class="flex justify-between items-start mb-4">
        <h2 class="text-xl font-bold text-gray-900"><%= @recurring_task.name %></h2>
        <%= link_to t("task.recurring_tasks.show.close_panel"), task_recurring_tasks_path, data: { turbo_frame: "task_detail_panel" }, class: "text-gray-500 hover:text-gray-700 text-sm p-1 rounded hover:bg-gray-100" %>
      </div>

      <dl class="space-y-3 text-sm">
        <div>
          <dt class="font-medium text-gray-500"><%= t("task.recurring_tasks.index.area") %></dt>
          <dd class="text-gray-900"><%= @recurring_task.task_area&.name || "—" %></dd>
        </div>
        <div>
          <dt class="font-medium text-gray-500"><%= t("task.recurring_tasks.index.next_due") %></dt>
          <dd class="text-gray-900"><%= @recurring_task.next_due_date ? l(@recurring_task.next_due_date, format: :short) : "—" %></dd>
        </div>
        <div>
          <dt class="font-medium text-gray-500"><%= t("task.recurring_tasks.index.recurrence") %></dt>
          <dd class="text-gray-900"><%= t("task.recurring_tasks.recurrence.#{@recurring_task.recurrence}") %></dd>
        </div>
        <% if @recurring_task.notes.present? %>
          <div>
            <dt class="font-medium text-gray-500"><%= t("task.recurring_tasks.form.notes") %></dt>
            <dd class="text-gray-900 whitespace-pre-wrap"><%= @recurring_task.notes %></dd>
          </div>
        <% end %>
      </dl>

      <div class="mt-6 pt-4 border-t border-gray-200 flex flex-wrap gap-2">
        <%= button_to t("task.recurring_tasks.mark_done"), mark_done_task_recurring_task_path(@recurring_task), method: :patch, form: { data: { turbo_frame: "_top" } }, class: "px-4 py-2 bg-green-500 text-white text-sm rounded hover:bg-green-600" %>
        <%= link_to t("shared.edit"), edit_task_recurring_task_path(@recurring_task), data: { turbo_frame: "_top" }, class: "px-4 py-2 bg-gray-200 text-gray-800 text-sm rounded hover:bg-gray-300" %>
        <%= link_to t("task.recurring_tasks.show.close_panel"), task_recurring_tasks_path, data: { turbo_frame: "task_detail_panel" }, class: "px-4 py-2 text-gray-600 hover:text-gray-800 text-sm" %>
      </div>
    </div>
  </div>
<% end %>
