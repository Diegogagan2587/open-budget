<p style="color: green"><%= notice %></p>

<h1 class="text-2xl font-bold mb-4">Categories</h1>

<div class="mb-4 flex justify-between items-center">
  <%= render AddButtonComponent.new(
      label: "New Category",
      path: new_category_path
    ) %>
</div>

<table class="min-w-full bg-white border">
  <thead>
    <tr class="bg-gray-100">
      <th class="px-4 py-2 text-left">Name</th>
      <th class="px-4 py-2 text-left">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr class="border-t">
        <td class="px-4 py-2"><%= category.name %></td>
        <td class="px-4 py-2">
          <%= link_to "View", category, class: "text-blue-500 hover:underline" %>
          <%= link_to "Edit", edit_category_path(category), class: "text-blue-500 hover:underline ml-2" %>
          <%= link_to "Delete", category, method: :delete, data: { confirm: "Are you sure? This will delete all associated expenses, templates, and planned expenses." }, class: "text-red-500 hover:underline ml-2" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

